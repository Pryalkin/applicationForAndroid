<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".application.registration.forSuperAdmin.ExamResultsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#21B2C1">

        <TextView
            android:id="@+id/textForExamRegistration1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Registration exam result"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <EditText
            android:id="@+id/textForExamFirstName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="First name"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <EditText
            android:id="@+id/textForExamMiddleName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Middle name"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp" />

        <EditText
            android:id="@+id/textForExamLastName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Last name"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <Spinner
            android:id="@+id/textForExamItemName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <EditText
            android:id="@+id/textForExamGrade"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Grade"
            android:background="#fff"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"/>

        <Button
            android:id="@+id/registrationExamResult"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:text="Register"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

