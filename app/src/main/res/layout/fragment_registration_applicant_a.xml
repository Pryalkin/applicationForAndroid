<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".application.registration.forUser.RegistrationApplicantAFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#539115"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/textRegister1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Registration"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"/>

            <TextView
                android:id="@+id/textRegister2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="for an applicant:"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"/>

            <EditText
                android:id="@+id/textFirstName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:text=""
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/textMiddleName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Middle name"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/textLastName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:background="#fff"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp" />

            <Button
                android:id="@+id/registrationForApplicant"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Register"/>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>